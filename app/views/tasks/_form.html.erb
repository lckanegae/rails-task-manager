<%= form_for(@task) do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </p>

   <!-- CHECKBOX -->
  <% if @task.persisted? %>
    <p>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </p>
  <% end  %>

  <p class="btn btn-primary btn-lg w-100">
    <%= f.submit %>
  </p>


<% end %>
